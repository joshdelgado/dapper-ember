<div class="app-wrap">
  <div class="start-screen {{if gameStarted "hidden"}}">
    <div class="start-screen-inner title-card">
      <img src="images/dapper-logo.png" alt="">
    </div>
    <div class="start-screen-inner player-card">
      <div>
        <h2>Dapper</h2>
      </div>
      <div class="start-screen-num-players-wrap">
        {{input value=player1Name placeholder="Player 1"}}
        {{input value=player2Name placeholder="Player 2"}}
        {{#if (gte numPlayers 3)}}
          {{input value=player3Name placeholder="Player 3"}}
        {{/if}}
        {{#if (eq numPlayers 4)}}
          {{input value=player4Name placeholder="Player 4"}}
        {{/if}}
        <div class="more-player-btn-wrap">
          <a {{action 'lessPlayers'}} class="less-player-btn">-</a>
          <a {{action 'morePlayers'}} class="more-player-btn">+</a>
        </div>
      </div>
      <div class="start-btn">
        <button {{action 'firstRound'}}>Start Game</button>
      </div>
    </div>
  </div>
  <div class="end-screen {{if gameEnded "active" "hidden"}}">
    <div class="end-screen-inner">
      <div class="player-list">
        <ul>
          {{#each players as |player index|}}
            {{#if (eq index whosTurn)}}
              <li class="active"><span>{{player.name}}<span>{{player.score}}</span></span></li>
            {{else}}
              <li><span>{{player.name}}<span>{{player.score}}</span></span></li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
      <div class="winner-declaration">
        <h1>Game Over.</h1>
        <h2>{{winner}} wins!</h2>
      </div>
      <button {{action 'newGame'}}>New Game</button>
    </div>
  </div>

  <div class="round-screen {{if roundScreen "active" "hidden"}}">
    <div class="round-screen-inner">
      <div class="player-list">
        <ul>
          {{#each players as |player index|}}
              <li><span>{{player.name}}<span>{{player.score}}</span></span></li>
          {{/each}}
        </ul>
      </div>
      <h1>Round {{currentRound}}</h1>
      <button {{action 'nextRound'}}>Start Round</button>
    </div>
  </div>

  <div class="app-window">
    <div class="player-list">
      <ul>
        {{#each players as |player index|}}
          {{#if (eq index whosTurn)}}
            <li class="active"><span>{{player.name}}</span></li>
          {{else}}
            <li><span>{{player.name}}</span></li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="challenge-wrap">
      {{#if name}}
        <div class="challenge-image">
          <img src="/images/{{image}}" alt="">
        </div>
        <div class="challenge-info">
          <h3 class="challenge-title">{{name}}</h3>
          <p class="challenge-description">{{description}}</p>
        </div>
      {{/if}}
    </div>

    <div class="buttons-wrap">
      <button {{action "nextTurn"}}>Failure</button>
      <button {{action "addPoint"}}>Success</button>
    </div>

  </div>
</div>
